@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <title>Edit</title>


    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

            table td, table th {
                padding: 8px;
                border: 1px solid #ddd;
            }

            table th {
                background-color: #f2f2f2;
            }



            .btn-center
            {
                 display: inline-block;
                 padding: 10px 20px;
                 border: 1px solid #ccc;
                 border-radius: 4px;
                 text-decoration: none;
                 color: #333;
                 font-weight: bold;
                 background-color: #f5f5f5;
            }

            .text-center
            {
                 text-align: center;
            }

    </style> 

</head>
<body>

    <form asp-action="SaveChanges" asp-controller="Home" method="post">

        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Record Date</th>
                    <th>Branch Id</th>
                    <th>Crop Year</th>
                    <th>Counterparty Id</th>
                    <th>Counterparty Name</th>
                    <th>Contact Id</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Amount</th>
                    <th>Process</th>
                    <th>Wetness</th>
                    <th>Garbage</th>
                    <th>Infection</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Id</td>
                    <td>@Model.RecordDate</td>
                    <td>@Model.BranchId</td>
                    <td>@Model.CropYear</td>
                    <td>@Model.CounterpartyId</td>
                    <td>@Model.CounterpartyName</td>
                    <td>@Model.ContactId</td>
                    <td>@Model.Product</td>
                    <td>@Model.Price</td>
                    <td>@Model.Amount</td>
                    <td>@Model.Process</td>
                    <td>@Model.Wetness</td>
                    <td>@Model.Garbage</td>
                    <td>@Model.Infection</td>

                </tr>
                <tr>
                    <td><input readonly type="text" name="Id" value=@Model.Id /></td>
                    <td><input type="text" name="NewRecordDate" value="@Model.RecordDate" /></td>
                    <td><input type="text" name="NewBranchId" value="@Model.BranchId" /></td>
                    <td><input type="text" name="NewCropYear" value="@Model.CropYear" /></td>
                    <td><input type="text" name="NewCounterpartyId" value="@Model.CounterpartyId" /></td>
                    <td><input type="text" name="NewCounterpartyName" value="@Model.CounterpartyName" /></td>
                    <td><input type="text" name="NewContactId" value="@Model.ContactId" /></td>
                    <td><input type="text" name="NewProduct" value="@Model.Product" /></td>
                    <td><input type="text" name="NewPrice" value="@Model.Price" /></td>
                    <td><input type="text" name="NewAmount" value="@Model.Amount" /></td>
                    <td><input type="text" name="NewProcess" value="@Model.Process" /></td>
                    <td><input type="text" name="NewWetness" value="@Model.Wetness" /></td>
                    <td><input type="text" name="NewGarbage" value="@Model.Garbage" /></td>
                    <td><input type="text" name="NewInfection" value="@Model.Infection" /></td>
                </tr>
            </tbody>
        </table>

        <div class="text-center" style="margin-top: 20px;">
            <button type="submit" class="btn-center">Зберегти зміни</button>
        </div>
    </form>
</body>
</html>












