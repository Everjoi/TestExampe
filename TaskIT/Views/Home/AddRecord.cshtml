@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <title>Edit</title>

    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

            table td, table th {
                padding: 8px;
                border: 1px solid #ddd;
            }

            table th {
                background-color: #f2f2f2;
            }



            .btn-center
            {
                 display: inline-block;
                 padding: 10px 20px;
                 border: 1px solid #ccc;
                 border-radius: 4px;
                 text-decoration: none;
                 color: #333;
                 font-weight: bold;
                 background-color: #f5f5f5;
            }

            .text-center
            {
                 text-align: center;
            }

    </style> 

</head>
<body>

    <form asp-action="AddRecordItem" asp-controller="Home" method="post">
       
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Record Date</th>
                    <th>Branch Id</th>
                    <th>Crop Year</th>
                    <th>Counterparty Id</th>
                    <th>Counterparty Name</th>
                    <th>Contact Id</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Amount</th>
                    <th>Process</th>
                    <th>Wetness</th>
                    <th>Garbage</th>
                    <th>Infection</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><input readonly type="text" name="Id" value="@Model" /></td>
                    <td><input type="text" name="RecordDate"  /></td>
                    <td><input type="text" name="BranchId"   /></td>
                    <td><input type="text" name="CropYear"   /></td>
                    <td><input type="text" name="CounterpartyId"  /></td>
                    <td><input type="text" name="CounterpartyName" /></td>
                    <td><input type="text" name="ContactId" /></td>
                    <td><input type="text" name="Product"  /></td>
                    <td><input type="text" name="Price" /></td>
                    <td><input type="text" name="Amount"  /></td>
                    <td><input type="text" name="Process"  /></td>
                    <td><input type="text" name="Wetness" /></td>
                    <td><input type="text" name="Garbage"  /></td>
                    <td><input type="text" name="Infection"  /></td>
                </tr>
            </tbody>
        </table>

        <div class="text-center" style="margin-top: 20px;">
            <button type="submit" class="btn-center">Добавити запис</button>
        </div>
    </form>
</body>
</html>












