@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="ua">
<head>
    <title>Main Table</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

            table td, table th {
                padding: 8px;
                border: 1px solid #ddd;
            }

            table th {
                background-color: #f2f2f2;
            }
    </style>
</head>
<body>
    <h1>Table View</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Record Date</th>
                <th>Branch Id</th>
                <th>Crop Year</th>
                <th>Counterparty Id</th>
                <th>Counterparty Name</th>
                <th>Contact Id</th>
                <th>Product</th>
                <th>Price</th>
                <th>Amount</th>
                <th>Process</th>
                <th>Wetness</th>
                <th>Garbage</th>
                <th>Infection</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var record in Model)
            {
                <tr>
                    <td>@record.Id</td>
                    <td>@record.RecordDate</td>
                    <td>@record.BranchId</td>
                    <td>@record.CropYear</td>
                    <td>@record.CounterpartyId</td>
                    <td>@record.CounterpartyName</td>
                    <td>@record.ContactId</td>
                    <td>@record.Product</td>
                    <td>@record.Price</td>
                    <td>@record.Amount</td>
                    <td>@record.Process</td>
                    <td>@record.Wetness</td>
                    <td>@record.Garbage</td>
                    <td>@record.Infection</td>
                    <td>
                        <a href="/Home/EditRecord/@record.Id">Edit</a>
                        <a href="/Home/DeleteRecord/@record.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    <div style="text-align: center; margin-top: 20px;">
        <a href="/Home/AddRecord" style=" display: inline-block; padding: 10px 20px; border: 1px solid #ccc; border-radius: 4px; text-decoration: none; color: #333; font-weight: bold; background-color: #f5f5f5;">Add Record</a>
    </div>

    <h1>Select Period</h1>
    <form action="/Home/ProcessSelectedPeriod" method="post">
        <label style=" font-weight: bold;" for="startDate">Start Date:</label>
        <input style="font-family: Arial, sans-serif; font-size: 16px; padding: 5px;" lang="uk" type="date" id="startDate" name="startDate" >

        <label style=" font-weight: bold;" for="endDate">End Date:</label>
        <input style="font-family: Arial, sans-serif; font-size: 16px; padding: 5px;" lang="uk" type="date" id="endDate" name="endDate">
        <button style=" display: inline-block; padding: 10px 20px; border: 1px solid #ccc; border-radius: 4px; text-decoration: none; color: #333; font-weight: bold; background-color: #f5f5f5;" type="submit">Next Tables</button>
    </form>

</body>
</html>




